@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Ekranı";
}

<h1>@ViewData["Title"]</h1>
<div class="row" style="justify-content: center;">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Parola</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" style="padding-left: 15px;" />
                            @Html.DisplayName("Beni Hatırla")
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Giriş Yap</button>
                </div>
                <div>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Yeni Kullanıcı</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
  
</div>


<style>
    main.pb-3 {
        text-align: center;
    }
    .checkbox {
        text-align: left !important;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
